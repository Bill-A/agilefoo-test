<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "AgileFoo" %></title>
    <meta name="description" content="Agile Box is your place to store agile related posts">
    <meta name="author" content="Bill Allen">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div id="main" role="main">
      <div class="container">
        <p class="lead"><%= yield(:title) %></p>      
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <footer>
            <br><br>Â© 2013 AgileFoo (v0.94 beta)
            <% if user_signed_in?  %>
 
            <% else %>
                  - You must be logged in to Post, Comment, Discuss and Reply: 
                  <i class="icon-edit icon-black"></i><%= link_to "Register", new_user_registration_path %> | 
                  <i class="icon-folder-open icon-black"></i> <%= link_to "Log In", new_user_session_path %>            
            <% end %>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>